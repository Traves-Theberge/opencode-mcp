{
  "name": "@opencode-mcp/server",
  "version": "0.1.0",
  "description": "MCP server that exposes OpenCode as a tool/subagent for IDEs and AI clients",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:smoke": "vitest run tests/smoke",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "opencode",
    "ai",
    "agent",
    "coding-assistant",
    "ide",
    "cursor",
    "claude"
  ],
  "author": "Traves-Theberge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencode-mcp/server"
  },
  "bugs": {
    "url": "https://github.com/opencode-mcp/server/issues"
  },
  "homepage": "https://github.com/opencode-mcp/server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opencode-ai/sdk": "^1.2.10",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
